{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [],
	"compilerOptions": {
    "module": "CommonJS",
		"sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "skipLibCheck": true,
    "types": [
      "node",
      "jest",
    ],
  },
  "exclude": ["node_modules", "coverage", "dist"],
}
